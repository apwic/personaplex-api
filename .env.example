# PersonaPlex API Environment Variables
# Copy this file to .env and fill in your values

# Hugging Face token (required for gated model access)
HF_TOKEN=your_hf_token_here

# API key for authentication
API_KEY=your-secure-api-key-here

# Model repository
MODEL_REPO=nvidia/personaplex-7b-v1

# Device for inference (cuda or cpu - note: cpu will be very slow)
DEVICE=cuda

# Maximum audio file size in bytes (10MB default)
MAX_AUDIO_SIZE=10485760
